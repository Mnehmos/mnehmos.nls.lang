{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(\\[[a-zA-Z][a-zA-Z0-9._-]*\\]|@type|@test|@literal|@main|@property|@invariant|INPUTS:|GUARDS:|LOGIC:|EDGE\\s+CASES:).*$",
      "end": "^\\s*\\}\\s*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(INPUTS|GUARDS|LOGIC|EDGE\\s+CASES):\\s*$|^\\s*@(type|test|literal|main|property|invariant).*\\{\\s*$",
    "decreaseIndentPattern": "^\\s*\\}\\s*$"
  },
  "wordPattern": "[a-zA-Z][a-zA-Z0-9._-]*",
  "onEnterRules": [
    {
      "beforeText": "^\\s*(INPUTS|GUARDS|LOGIC|EDGE\\s+CASES):\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*@(type|test|literal|property|invariant).*\\{\\s*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
